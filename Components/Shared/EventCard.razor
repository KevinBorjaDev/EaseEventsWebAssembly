<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Event.Name</h5>
        <p class="card-text">
            <strong>Fecha:</strong> @Event.Date?.ToString("dd/MM/yyyy")<br />
            <strong>Lugar:</strong> @Event.Location
        </p>
        <NavLink class="btn btn-primary btn-sm" href="@($"/events/details/{Event.Name}")">Ver Detalles</NavLink>
    </div>
</div>

@code {
    [Parameter]
    public EventModel Event { get; set; }

    protected override Task OnParametersSetAsync()
    {
        Console.WriteLine($"OnParametersSetAsync - Evento recibido: {Event?.Name ?? "NULL"}");
        return Task.CompletedTask;
    }
}